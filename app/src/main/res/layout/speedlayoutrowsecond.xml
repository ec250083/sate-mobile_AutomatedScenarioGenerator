<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/speedviewlayout">


        <TextView
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textStyle="bold"
                android:background="@android:color/darker_gray"
                android:textSize="20sp"
                android:text="Title"


                android:id="@+id/title_second"
                app:layout_constraintTop_toBottomOf="@+id/passscenarios_second"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:text="totl"
                android:id="@+id/total_second"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_second"
                app:layout_constraintStart_toStartOf="parent" />


        <ImageView
                android:id="@+id/speedViewsecond"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/speedometer"
                app:layout_constraintTop_toBottomOf="@+id/passscenarios_second"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" />

        <TextView
                android:text="@string/passscearios"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:id="@+id/passscenarios_second"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/total_second"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_second"
                android:layout_marginTop="8dp" />

        <TextView
                android:text="Passrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/passrate_second"
                app:layout_constraintTop_toBottomOf="@+id/speedViewsecond"
                app:layout_constraintStart_toStartOf="@+id/speedViewsecond"
                app:layout_constraintEnd_toEndOf="@+id/speedViewsecond"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_200" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
